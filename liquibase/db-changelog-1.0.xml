<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet id="create_db" author="root">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists schemaName="onlineShopDB" tableName="categories"/>
            </not>
            <not>
                <tableExists schemaName="onlineShopDB" tableName="manufacturers"/>
            </not>
            <not>
                <tableExists schemaName="onlineShopDB" tableName="products"/>
            </not>
            <not>
                <tableExists schemaName="onlineShopDB" tableName="users"/>
            </not>
            <not>
                <tableExists schemaName="onlineShopDB" tableName="orders"/>
            </not>
            <not>
                <tableExists schemaName="onlineShopDB" tableName="orders_products"/>
            </not>
        </preConditions>

        <createTable tableName="categories">
            <column name="id" type="int unsigned" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="category_name" type="varchar(50)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="category_parent_id" type="int unsigned">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createTable tableName="manufacturers">
            <column name="id" type="int unsigned" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="manufacturer_name" type="varchar(50)">
                <constraints nullable="false" unique="true"/>
            </column>
        </createTable>

        <createTable tableName="products">
            <column name="id" type="int unsigned" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="product_name" type="varchar(50)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="product_price" type="float" defaultValue="0.0">
                <constraints nullable="false"/>
            </column>
            <column name="product_available" type="boolean" defaultValueBoolean="true">
                <constraints nullable="false"/>
            </column>
            <column name="product_description" type="varchar(100)">
                <constraints nullable="true"/>
            </column>
            <column name="product_category_id" type="int unsigned">
                <constraints nullable="false"/>
            </column>
            <column name="product_manufacturer_id" type="int unsigned">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createTable tableName="users">
            <column name="id" type="int unsigned" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="user_name" type="varchar(20)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="user_password" type="varchar(20)">
                <constraints nullable="false"/>
            </column>
            <column name="user_email" type="varchar(320)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="user_state" type="smallint" defaultValue="1">
                <constraints nullable="false"
                             checkConstraint="CHECK (int_value &gt;= 0 AND int_value &lt;= 2)"/>
            </column>
        </createTable>

        <createTable tableName="orders">
            <column name="id" type="int unsigned" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="order_user_id" type="int unsigned">
                <constraints nullable="false"/>
            </column>
            <column name="order_address" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="order_date" type="timestamp">
                <constraints nullable="false"/>
            </column>
            <column name="order_payed" type="boolean" defaultValueBoolean="false">
                <constraints nullable="false"/>
            </column>
            <column name="order_state" type="smallint">
                <constraints nullable="false"
                             checkConstraint="CHECK (int_value &gt;= 0 AND int_value &lt;= 2)"/>
            </column>
            <column name="order_payment_conditions" type="smallint">
                <constraints nullable="false"
                             checkConstraint="CHECK (int_value &gt;= 0 AND int_value &lt;= 1)"/>
            </column>
        </createTable>

        <createTable tableName="orders_products">
            <column name="order_id" type="int unsigned">
                <constraints nullable="false"/>
            </column>
            <column name="product_id" type="int unsigned">
                <constraints nullable="false"/>
            </column>
            <column name="order_product_quantity" type="int unsigned">
                <constraints nullable="false"
                             checkConstraint="CHECK (int_value &gt;= 1)"/>
            </column>
            <column name="order_product_unit_price" type="float">
                <constraints nullable="false"
                             checkConstraint="CHECK (float_value &gt;= 0.0)"/>
            </column>
        </createTable>

        <addPrimaryKey columnNames="order_id, product_id"
                       constraintName="pk_orders_products"
                       tableName="orders_products"/>

        <addForeignKeyConstraint constraintName="fkey_category_to_category"
                                 baseTableName="categories" baseColumnNames="category_parent_id"
                                 referencedTableName="categories" referencedColumnNames="id"
                                 onDelete="NO ACTION" onUpdate="NO ACTION"/>

        <addForeignKeyConstraint constraintName="fkey_manufacturer_to_product"
                                 baseTableName="products" baseColumnNames="product_manufacturer_id"
                                 referencedTableName="manufacturers" referencedColumnNames="id"
                                 onDelete="NO ACTION" onUpdate="NO ACTION"/>

        <addForeignKeyConstraint constraintName="fkey_category_to_product"
                                 baseTableName="products" baseColumnNames="product_category_id"
                                 referencedTableName="categories" referencedColumnNames="id"
                                 onDelete="NO ACTION" onUpdate="NO ACTION"/>

        <addForeignKeyConstraint constraintName="fkey_user_to_order"
                                 baseTableName="orders" baseColumnNames="order_user_id"
                                 referencedTableName="users" referencedColumnNames="id"
                                 onDelete="CASCADE" onUpdate="CASCADE"/>

        <addForeignKeyConstraint constraintName="fkey_orders"
                                 baseTableName="orders_products" baseColumnNames="order_id"
                                 referencedTableName="orders" referencedColumnNames="id"
                                 onDelete="CASCADE" onUpdate="CASCADE"/>

        <addForeignKeyConstraint constraintName="fkey_products"
                                 baseTableName="orders_products" baseColumnNames="product_id"
                                 referencedTableName="products" referencedColumnNames="id"
                                 onDelete="NO ACTION" onUpdate="NO ACTION"/>

    </changeSet>

    <changeSet id="tag-1.0" author="root">
        <tagDatabase tag="1.0"/>
    </changeSet>
</databaseChangeLog>